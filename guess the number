#include <stdio.h>

int main()
   int number = 10;
   int guess;
   do
   {
       cont << "Player 1, please enter your guess:" << endl;
       cin >> guess;
       
       if (guess == number)
           cont << "Player 1, you win!!!" << endl;
        
        else if (guess < number)
            cont << "Sorry, the number is bigger than " << guess << endl;
            
        else
            cont << "Sorry, the number is smaller than" << guess <<endl;
   } while (number != guess);
   return 0;
    
}

